<% title "Workouts" %>

<table>
  <tr>
    <th>Day</th>
    <th>Name</th>
    <th>Muscle</th>
    <th>Reps</th>
    <th>Duration</th>
  </tr>
  <% for workout in @workouts %>
    <tr>
      <td><%= workout.day_id %></td>
      <td><%= workout.name %></td>
      <td><%= workout.muscle %></td>
      <td><%= workout.reps %></td>
      <td><%= workout.duration %></td>
      <td><%= link_to "Show", workout %></td>
      <td><%= link_to "Edit", edit_workout_path(workout) %></td>
      <td><%= link_to "Destroy", workout, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Workout", new_workout_path %></p>
